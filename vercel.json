{
    "version": 2,
    "builds": [
      {
        "src": "api/chatbot.py",
        "use": "@vercel/python"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/chatbot.py"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "NODE_VERSION": "16.x",
      "NPM_FLAGS": "--legacy-peer-deps"
    }
  }